{
  "name": "illuaminate",
  "version": "0.1.0",
  "description": "Source code analysis for Lua",
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/squiddev/illuaminate",
  "dependencies": {
    "ocaml": ">=4.08 <4.11",
    "@opam/dune": ">=2.3",
    "@opam/cmdliner": "*",
    "@opam/containers": ">=3.0.1",
    "@opam/fpath": "*",
    "@opam/js_of_ocaml": "*",
    "@opam/logs": "*",
    "@opam/menhir": "*",
    "@opam/omd": "*",
    "@opam/ppx_deriving_yojson": "*",
    "@opam/re": "*",
    "@opam/result": "*",
    "@opam/yojson": "*",
    "@opam/lsp": "*"
  },
  "devDependencies": {
    "@opam/js_of_ocaml-compiler": ">=3.6.0",
    "@opam/js_of_ocaml-ppx": "*",
    "@opam/ppx_deriving": "*",
    "@opam/ppxlib": ">=0.14.0",
    "@opam/reason": "*",
    "@opam/alcotest": "*",
    "@opam/junit": "*",
    "@opam/qcheck-core": "*",
    "@opam/omnomnom": "*",
    "@opam/odoc": "*",
    "@opam/bisect_ppx": "*",
    "@opam/ocamlformat": "*",
    "@opam/opam-file-format": "*"
  },
  "esy": {
    "build": "dune build -p #{self.name}",
    "release": { "includePackages": [ "root" ] },
    "buildEnv": { "PATH": "#{self.root / '_build_tools' : $PATH}" }
  },
  "resolutions": {
    "@opam/omnomnom":
      "git://github.com/SquidDev/omnomnom:omnomnom.opam#4a7020d72ee63e241955aec27c8fded59813b792",
    "@opam/lsp":
      "git://github.com/ocaml/ocaml-lsp.git#e129cfe315d197deb8f1ce93ea54158e784603f2"
  },
  "scripts": {
    "test": "dune build @runtest -f",
    "format": "dune build @fmt --auto-promote"
  }
}
